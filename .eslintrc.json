{
  "extends": ["next", "next/core-web-vitals", "prettier"],
  "rules": {
    "import/no-anonymous-default-export": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["~/components", "./components"],
          ["~/data", "./data"],
          ["~/hooks", "./hooks"],
          ["~/lib", "./lib"],
          ["~/models", "./models"],
          ["~/styles", "./styles"],
          ["~/utils", "./utils"]
        ],
        "extensions": [".js"]
      }
    }
  }
}
